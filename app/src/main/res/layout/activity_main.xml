<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_shadow_1"
        android:src="@mipmap/ukulele_home_tutorial_prepare_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fy.customview.AbilityView
        android:id="@+id/av"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:level="2"
        app:side="4" />

    <com.fy.customview.Line1
        android:id="@+id/line_1"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:count="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:scale="0.4" />

    <com.fy.customview.Line1
        android:id="@+id/line_2"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:count="20"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:scale="0.4" />

    <com.fy.customview.Line1
        android:id="@+id/line_3"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:count="30"
        app:layout_constraintBottom_toTopOf="@id/line_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:scale="0.4" />

    <com.fy.customview.LoveView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:color="@color/blue_1_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fy.customview.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ukulele_tools_tuner_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>